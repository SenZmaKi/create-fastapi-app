from contextlib import asynccontextmanager
from typing import AsyncGenerator
import uvicorn
from fastapi import FastAPI
from starlette.requests import Request
from starlette.responses import JSONResponse
from app.middlewares.cors import add_cors_middleware
from app.middlewares.logging import add_logging_middleware
from app.middlewares.rate_limiter import add_rate_limiter_middleware
from app.middlewares.docshield import add_docshield_middleware
from app.utils.settings import settings
from app.utils.logger import logger
from app.middlewares.request_id import add_request_id_middleware
from app.routers.routes.root import router as root_router
from app.database import close_db, init_db
from slowapi.errors import RateLimitExceeded
from slowapi import _rate_limit_exceeded_handler
{%- if enable_auth %}
from app.services.scheduler import get_scheduler_service
{%- endif %}


def add_middlewares(app: FastAPI) -> None:
    logger.info("Adding middlewares")
    add_logging_middleware(app)
    add_request_id_middleware(app)
    add_cors_middleware(app)
    add_rate_limiter_middleware(app)
    add_docshield_middleware(app)
    logger.info("Middlewares added")


@asynccontextmanager
async def lifespan(app: FastAPI) -> AsyncGenerator[None, None]:
    # Startup
    logger.info(
        "Starting server", extra={"environment": settings.deployment_environment}
    )
    await init_db()
    {%- if enable_auth %}
    scheduler_service = get_scheduler_service()
    scheduler_service.start_scheduler()
    {%- endif %}

    yield

    # Shutdown
    logger.info("Shutting down server")
    {%- if enable_auth %}
    scheduler_service.shutdown_scheduler()
    {%- endif %}
    await close_db()


def build_fastapi_app() -> FastAPI:
    return FastAPI(
        title=settings.app_name,
        debug=settings.fastapi_debug,
        version=settings.app_version,
        description=settings.app_description,
        lifespan=lifespan,
    )


async def generic_exception_handler(_: Request, exception: Exception) -> JSONResponse:
    logger.exception("Unhandled exception", exc_info=exception)
    return JSONResponse(
        status_code=500,
        content={"detail": "Internal Server Error"},
        # Note: X-Request-ID header is automatically added by CorrelationIdMiddleware
    )


def add_exception_handlers(app: FastAPI) -> None:
    logger.info("Adding exception handlers")
    app.add_exception_handler(Exception, generic_exception_handler)
    app.add_exception_handler(RateLimitExceeded, _rate_limit_exceeded_handler)  # pyright: ignore[reportArgumentType]
    logger.info("Exception handlers added")


def create_app() -> FastAPI:
    logger.info("Creating app")
    app = build_fastapi_app()
    app.include_router(root_router)
    add_middlewares(app)
    add_exception_handlers(app)
    logger.info("App created")
    return app


app = create_app()


def main() -> None:
    uvicorn.run(
        "app.main:app",
        host=settings.fastapi_host,
        port=settings.fastapi_port,
        reload=settings.fastapi_reload,
        log_level=settings.fastapi_log_level,
        reload_includes=settings.fastapi_reload_includes,
    )


if __name__ == "__main__":
    main()